    padding: 10px 0;
    height: 50px;
}
@media only screen and (max-width: 767px) {
    .sticky_bar { display:block; }
    .sticky_bar .form-default {
        width: 220px;
    }
    .sticky_bar select{
        font-size: 12px !important;
        line-height: 26px;
