        padding-right: 3px !important;
        padding-bottom: 10px !important;
    }
    .sticky_bar .btn{
        width: 128px;
    }
    .sticky_bar_wp{
        padding: 17px 12px;
    }
}
@media only screen and (max-width: 375px) {
    .sticky_bar .btn {
        width: 122px;
    }
    .sticky_bar select{
