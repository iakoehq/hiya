    z-index: 2;
    width: 100%;
    height: 86px;
    padding-top: 17px;
    background: #fff;
    display: flex;
    justify-content: space-between;
    padding-left: 12px;
    padding-right: 30px;
}
.sticky_bar .form-default {
    width: 571px;
}
.sticky_bar select{
    border: 2px solid #5979AE !important;
    border-radius: 10px !important;
    font-weight: normal;
    font-size: 16px !important;
    line-height: 25px;
}
.sticky_bar .btn{
