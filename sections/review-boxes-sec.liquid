      "type": "reviews",
      "name": "reviews",
      "settings": [
        {
          "type": "image_picker",
          "label": "image",
          "id": "image"
        },
        {
          "type": "image_picker",
          "label": "review Image",
          "id": "review_image"
        },
        {
          "type": "text",
          "label": "Review Title",
          "id": "review_title"
        },
        {
          "type": "textarea",
          "label": "Review Content",
          "id": "review_content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Review Boxes Sec"
    }
  ]
}
{% endschema %}

