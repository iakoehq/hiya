<div class="container">
  {% if section.settings.heading != blank %}
  <h2 class="section-title">
    {{ section.settings.heading }}
  </h2>
{% endif %}
  <div class="description">
    {% if section.settings.content != blank %}
    <p>{{ section.settings.content }}</p>
  {% endif %}
  </div>

  <hr>
{% if section.settings.heading2 != blank %}
  <h2 class="section-title">{{ section.settings.heading2 }}</h2>
{% endif %}
  <div class="description">
    {% if section.settings.content2 != blank %}
    <p>{{ section.settings.content2 }}</p>
  {% endif %}
  </div>

  <div class="image-box">
    {% if section.settings.main_image != blank %}
    <img src="{{ section.settings.main_image | img_url : 'master' }}" alt="image">
  {% endif %}
  </div>
</div>

