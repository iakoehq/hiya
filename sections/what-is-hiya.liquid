                    "label": "Content",
                    "id": "content"
                  },
                  {
                    "type": "text",
                    "label": "Heading 2",
                    "id": "heading2"
                  },
                  {
                    "type": "html",
                    "label": "Content 2",
                    "id": "content2"
                  },
                  {
                    "type": "image_picker",
                    "label": "Image",
                    "id": "main_image"
                  }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "What Is Hiya"
    }
  ]
}
{% endschema %}

