<div class="container">
  <div class="content">
    <div class="image-box">
      {% if section.settings.main_image != blank %}
      <img src="{{ section.settings.main_image | img_url : 'master' }}" alt="image" class="image">
     {% endif %}
    </div>
    <div class="text-box">
      {% if section.settings.content != blank %}
      {{ section.settings.content }}
      {% endif %}
      {% if section.settings.author != blank %}
        <h6>{{ section.settings.author }}</h6>
       {% endif %}
       {% if section.settings.text != blank %}
        <p class="author">{{ section.settings.text }}</p>
      {% endif %}
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Influencer Image text 1st",
  "tag": "section",
  "class": "influencer-image-text",
  "settings": [
                {
                    "type": "html",
                    "label": "Content",
                    "id": "content"
                  },
                  {
                    "type": "image_picker",
                    "label": "Image",
                    "id": "main_image"
                  },
                  {
                    "type": "text",
                    "label": "Author Name",
                    "id": "author"
                  },
                  {
                    "type": "text",
                    "label": "Text",
                    "id": "text"
                  }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Influencer Image text 1st"
    }
  ]
}
{% endschema %}

