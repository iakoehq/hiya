<section class="optimized-for-freshness-sec">
        <svg class="top-sec-curve-img" version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg"
            xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 1920 97.9"
            style="enable-background:new 0 0 1920 97.9;" xml:space="preserve">
            <style type="text/css">
                .st61 {
                    fill: #fff;
                }
            </style>
            <path id="Path_2" class="st61" d="M1920,17.3c0,0-256,80.6-960,80.6S0,17.3,0,17.3V0h1920L1920,17.3z"></path>
        </svg>
        <div class="container">
            <div class="inner">
                <div class="image">
                  {% if section.settings.main_image != blank %}
                    <img src="{{ section.settings.main_image | img_url: 'master' }}" alt="img">
                  {% endif %}
                </div>
                <div class="content">
                   {% if section.settings.heading != blank %}
                    <h2>{{ section.settings.heading }}</h2>
                  {% endif %}
                  
                   {% if section.settings.content != blank %}
                    <p>{{ section.settings.content }}</p>
                  {% endif %}
                  
                    {% if section.settings.button_text != blank %}
                    <a href="{{ section.settings.button_url }}" class="primary-btn shop-btn">{{ section.settings.button_text }}</a>
                  {% endif %}
                  
                </div>

            </div>
        </div>
        <svg class="bottom-sec-curve-img" version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg"
            xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 1920 97.9"
            style="enable-background:new 0 0 1920 97.9;" xml:space="preserve">
            <style type="text/css">
                .st62 {
                    fill: #d7f1ed;
                }
            </style>
            <path id="Path_2" class="st62" d="M1920,17.3c0,0-256,80.6-960,80.6S0,17.3,0,17.3V0h1920L1920,17.3z"></path>
        </svg>
    </section>

{% schema %}
{
  "name": "Optimized For Freshness",
  "tag": "section",
  "class": "optimized-for-main",
  "settings": [
                  {
                    "type": "text",
                    "label": "Heading",
                    "id": "heading"
                  },
                  {
                    "type": "textarea",
                    "label": "Content",
                    "id": "content"
                  },
                  {
                    "type": "image_picker",
                    "label": "Main Image",
                    "id": "main_image"
                  },
                  {
                    "type": "text",
                    "label": "Button Text",
                    "id": "button_text"
                  },
                  {
                    "type": "url",
                    "label": "Button Url",
                    "id": "button_url"
                  }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Optimized For Freshness"
    }
  ]
}
{% endschema %}

